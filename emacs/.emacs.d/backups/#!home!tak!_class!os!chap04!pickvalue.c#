#include<stdio.h>
#include<stdlib.h>

int main(int argc, char *argv[]) {
    FILE *fp;
    int a;
    int i, j, k;
    i = atoi(argv[1]);
    j = atoi(argv[2]);
    k = atoi(argv[3]);
    int set = (i*2500 + j*50 + k) * 4;

    if((fp = fopen("array.bin", "rb")) == NULL) {
        perror("array.bin");
        exit(EXIT_FAILURE);
    }

    if(fseek(fp, set, SEEK_SET) != 0 ) {
        perror("fseek");
        fclose(fp);
        exit(EXIT_FAILURE);
    }

    if(fread(&a, sizeof(int), 1, fp) != 1) {
        perror("a");
        fclose(fp);
        exit(EXIT_FAILURE);
    }

    if(fclose(fp) == EOF) {
        perror("array.bin");
        exit(EXIT_FAILURE);
    }

    printf("The value of (%d,%d,%d) is %d\n", i, j, k, a);

}
