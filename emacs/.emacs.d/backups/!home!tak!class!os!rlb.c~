#include<stdio.h>
#include<stdlib.h>

struct profile {
    char name[18];
    int age;
    float height;
};

int main() {
    FILE *fp;
    char name[14];
    int age;
    float height;
    struct profile list;

    if((fp = fopen("lb.bin", "rb")) == NULL) {
        perror("pb.bin");
        exit(EXIT_FAILURE);
    }


    if(fread(&profile, sizeof(profile), 4, fp) {
            peror("profile");
            fclose(fp);
            exit(EXIT_FAILURE);
        }
        
        
    if(fread(name, 1, 14, fp) != 14) {
        perror("name");
        fclose(fp);
        exit(EXIT_FAILURE);
    }

    if(fread(&age, sizeof(int), 1, fp) != 1) {
        perror("age");
        fclose(fp);
        exit(EXIT_FAILURE);
    }

    if(fread(&height, sizeof(float), 1, fp) != 1) {
        perror("height");
        fclose(fp);
        exit(EXIT_FAILURE);
    }

    if(fclose(fp) == EOF) {
        perror("pb.bin");
        exit(EXIT_FAILURE);
    }

    printf("nam=%s\n", name);
    printf("age=%d\n", age);
    printf("height=%f\n", height);

}
