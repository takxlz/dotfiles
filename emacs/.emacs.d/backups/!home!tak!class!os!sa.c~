#include<stdio.h>
#include<stdlib.h>
#define BUFSIZE 512

int main() {
    FILE * fp;
    int test[50][50][50];

    for(int i=0; i<50; i++) {
        for(int j=0; j<50; j++) {
            for(int k=0; k<50; k++) {
                test[i][j][k] = rand();
            }
        }
    }

    if((fp = fopen("sa.bin", "wb")) == NULL) {
        perror("sa.bin");
        exit(EXIT_FAILURE);
    }
    
    fwrite(test, sizeof(int), 50*50*50, fp);

    if(fclose(fp) == EOF) {
        perror("sa.bin");
        exit(EXIT_FAILURE);
    }



    
    if((fp = fopen("sa.txt", "w")) == NULL) {
        perror("sa.txt");
        exit(EXIT_FAILURE);
    }


    for(int i=0; i<50; i++) {
        for(int j=0; j<50; j++) {
            for(int k=0; k<50; k++) {
                fprintf(fp, "%d", test[i][j][k]);
            }
        }
    }
    
    if(fclose(fp) == EOF) {
        perror("sa.bin");
        exit(EXIT_FAILURE);
    }

    
}
